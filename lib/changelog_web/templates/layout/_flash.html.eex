    <div class="flash-message" role="alert"><p><%= @message %></p></div>
    <button class="flash-close js-flash-close" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 10"><path d="M1 9L9 1M1 1l8 8" fill="none" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg></button>
  </div>
</div>
